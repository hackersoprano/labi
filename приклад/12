#include <iostream>
#include <ctime>
#include <iomanip>
using namespace std;
 
int main(int argc, char* argv[])
{
    srand(time(0) );
    int n;
    cout<<"Введите размерность массива: ";
    cin>>n;
    int *arr = new int [n];
        for (int i = 0; i < n; i++)
            arr[i] = (rand () % -10 - rand () % 10); 
        cout << "array = ";
        for (int i = 0; i < n; i++)
            cout << setprecision(2) << arr[i] << "    ";//вывод
    cout <<"\n";
    cout<<"\n";
    
        int min = -1;
        for (int i=0; i<n; i++)
            if (min < 0) min = i;
                else
                    if (arr[i] < arr[min]) min = i;
        if (min < 0) return -1;
        
        int k, max;
        for (int i=(min+1); i<n; i++)
        {
            for (max=k=i; k<n; k++)
                if (arr[k] < arr[max]) max = k;
            if (arr[i] != arr[max])
                swap(arr[i], arr[max]);
        }
        cout<<min<<"\n";
        cout << "array = ";
        for (int i = 0; i < 10; i++)
                cout << setprecision(2) << arr[i] << "    ";
            
            
            
            
            
    delete [] arr;
    cout << endl;
    system("pause");
    return 0;
}
